<!-- form login starts -->
<section class="signup">
	<div class="container">
		<div class="row">
			<div class="col col-12 col-lg-10">
				<div class="signup-container">
					<div class="background-signup"></div>
					<div class="content">
						<div class="form-container">
							<form action="/user/create-user" method="POST">
								<div class="logo-form">
									<a href="/">
										<img src="/images/logo.png" alt="logo">
									</a>
								</div>
								<div class="heading">
									<h3>Create an account</h3>
								</div>
								<div class="form-group">
									<div class="icon-check">
										<i class="fa fa-check-circle first-icon" aria-hidden="true"></i>
										<i class="fa fa-exclamation-circle last-icon" aria-hidden="true"></i>
									</div>
									<input class="form-control" type="text" name="name" id="full-name"
										placeholder="Enter Your Full Name" autocomplete="off">
									<div class="nofitication">
										<span></span>
									</div>
								</div>
								<div class="form-group">
									<div class="icon-check">
										<i class="fa fa-check-circle first-icon" aria-hidden="true"></i>
										<i class="fa fa-exclamation-circle last-icon" aria-hidden="true"></i>
									</div>
									<input class="form-control" type="email" name="email" id="email"
										placeholder="Enter Your Email" autocomplete="off">
									<div class="nofitication">
										<span></span>
									</div>
								</div>
								<div class="form-group">
									<div class="icon-check">
										<i class="fa fa-check-circle first-icon" aria-hidden="true"></i>
										<i class="fa fa-exclamation-circle last-icon" aria-hidden="true"></i>
									</div>
									<input class="form-control" type="password" name="password" id="password"
										placeholder="Enter Your Password">
									<div class="nofitication">
										<span></span>
									</div>
								</div>
								<div class="form-group last-form-group">
									<div class="icon-check">
										<i class="fa fa-check-circle first-icon" aria-hidden="true"></i>
										<i class="fa fa-exclamation-circle last-icon" aria-hidden="true"></i>
									</div>
									<input class="form-control" type="password" name="repeat-password"
										id="repeat-password" placeholder="Repeat Password">
									<div class="nofitication">
										<span></span>
									</div>
								</div>
								<div class="form-group">
									<div class="form-container-check agree">
										<div class="form-check">
											<input class="form-check-input" type="checkbox" id="agree">
											<div class="state-check active">
												<label class="form-check-label" for="agree">
													I agree to Natto's
													<a href="#">Terms</a> and
													<a href="#">Services</a>
												</label>
											</div>
										</div>
									</div>
								</div>
								<button type="submit" class="btn btn-large">
									Sign up
								</button>
								<div class="have-accout">
									<p>
										If you have an account?
										<a href="/login">Login</a>
									</p>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- form login ends -->