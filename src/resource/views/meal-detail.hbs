<!-- title bar starts -->
<section class="title-bar">
	<div class="container">
		<div class="row">
			<div class="col col-12 col-md-6">
				<div class="left-title-text">
					<h3>Meal Detail</h3>
				</div>
			</div>
			<div class="col col-12 col-md-6">
				<div class="right-title-text">
					<div class="breadcrumb">
						<div class="breadcrumb-item">
							<a href="/">Home</a>
						</div>
						<div class="breadcrumb-item">
							<a href="/partner">Partners</a>
						</div>
						<div class="breadcrumb-item active">Meal Detail
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- title bar ends -->
<!-- restaurant detail view starts -->
<section class="restaurant-detail-view">
	<div class="container">
		<div class="row">
			<div class="col col-12 col-lg-8">
				<div class="slider">
					<div class="main-img">
						{{#each meal.photos}}
							{{#if (checkFirst @index)}}
								<img class="active main-img-{{sum @index 1}}" src="{{this}}" alt="slider">
								{{else}}
								<img class="main-img-{{sum @index 1}}" src="{{this}}" alt="slider">
							{{/if}}
						{{/each}}
					</div>
					<div class="nav-img">
						{{#each meal.photos}}
							<div class="nav-img-item">
								<img src="{{this}}" alt="img item" data-id="{{sum @index 1}}">
							</div>
						{{/each}}
					</div>
				</div>
				<div class="profile-own">
					<div class="user-details">
						<div class="user-img">
							<a href="/user-profile-view">
								<img src="{{user.avartar}}" alt="own">
							</a>
						</div>
						<div class="name-location">
							<a href="/user-profile-view">
								<h4>{{user.name}}</h4>
							</a>
							<p>{{restaurant.position}}</p>
						</div>
					</div>
					<div class="right-side-btns">
						<div class="online-offline">
							<p>
								<span><i class="fa fa-circle" aria-hidden="true"></i></span>
								Online
							</p>
						</div>
						<a href="#" class="my-btn">
							<i class="fa fa-phone" aria-hidden="true"></i>
							Call
						</a>
						<a href="#" class="my-btn">
							Order Now
						</a>
					</div>
				</div>
				<div class="info-restaurant">
					<div class="restaurant-details">
						<div class="restaurant-img">
							<a href="/user-profile-view">
								<img src="{{restaurant.logo}}" alt="own">
							</a>
						</div>
						<div class="name-location">
							<a href="/user/restaurant/{{meal.slugRestaurant}}">
								<h4>{{restaurant.name}}</h4>
							</a>
							<p>
								<i class="fa fa-map-marker" aria-hidden="true"></i>
								<span>{{restaurant.city}}</span>
							</p>
						</div>
					</div>
					<div class="right-side-btns">
						<div class="become-partners">
							<a href="#" class="my-btn">Partner</a>
						</div>
						<div class="rating">
							<i class="fa fa-star" aria-hidden="true"></i>
							<i class="fa fa-star" aria-hidden="true"></i>
							<i class="fa fa-star" aria-hidden="true"></i>
							<i class="fa fa-star" aria-hidden="true"></i>
							<i class="fa fa-star-o" aria-hidden="true"></i>
							<span>4.0 / 5.0</span>
						</div>
					</div>
				</div>
				<div class="published">
					<div class="published-left">
						<span>
							<i class="fa fa-calendar-check-o" aria-hidden="true"></i>
							Member since August 2021
						</span>
					</div>
					<div class="published-right">
						<div class="bookmark">
							<i class="fa fa-bookmark-o" aria-hidden="true"></i>
							Bookmark
						</div>
						<div class="add-review">
							<i class="fa fa-pencil" aria-hidden="true"></i>
							Add review
						</div>
						<div class="share">
							<span class="btn-share">
								<i class="fa fa-share-alt" aria-hidden="true"></i>
								Share
							</span>
							<div class="share-socials">
								<a href="#">
									<i class="fa fa-facebook" aria-hidden="true"></i>
									Facabook
								</a>
								<a href="#">
									<i class="fa fa-twitter" aria-hidden="true"></i>
									Twitter
								</a>
								<a href="#">
									<i class="fa fa-google" aria-hidden="true"></i>
									Goggle
								</a>
								<a href="#">
									<i class="fa fa-instagram" aria-hidden="true"></i>
									Instagram
								</a>
								<a href="#">
									<i class="fa fa-linkedin" aria-hidden="true"></i>
									Linkedin
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col col-12 col-lg-4">
				<form class="meal-detail form-container" action="/user/restaurant/{{meal.slugRestaurant}}/meal/{{meal.slug}}/order-meal" method="POST">
					<input type="hidden" name="userName" value="{{user.name}}">
					<input type="hidden" name="userId" value="{{user.userId}}">
					<input type="hidden" name="location" value="{{user.location}}">
					<input type="hidden" name="name" value="{{meal.name}}">
					<input type="hidden" name="mealId" value="{{meal._id}}">
					<input type="hidden" name="sellerRest" value="{{restaurant.name}}">
					<input type="hidden" name="mealImg" value="{{meal.photos.[0]}}">
					<input type="hidden" name="price" value="{{meal.price}}">
					<input type="hidden" name="quantity" class="quantityInput" value="1">
					<input type="hidden" name="payment" class="payment" value="{{meal.price}}">
					<div class="name-meal">
						<h1>{{meal.name}}</h1>
					</div>
					<div class="description">
						<h4>Description</h4>
						<p>{{meal.description}}</p>
					</div>
					<div class="price">
						<p>$<span class="price-meal">{{meal.price}}</span>.00</p>
					</div>
					<div class="delivery">
						<div class="transportation">
							<i class="fa fa-shopping-cart" aria-hidden="true"></i>
							Delivery Free : Free
						</div>
						<div class="time">
							<i class="fa fa-clock-o" aria-hidden="true"></i>
							Delivery Time : 30 Min
						</div>
					</div>
					<div class="quantity">
						<h4>Quantity</h4>
						<div class="form-group">
							<button type="button" class="down-qty"><i class="fa fa-minus-square" aria-hidden="true"></i></button>
							<input class="field-input" type="number" value="1" min="1" name="quantity" disabled>
							<button type="button" class="up-qty"><i class="fa fa-plus-square" aria-hidden="true"></i></button>
						</div>
					</div>
					<div class="total">
						<div class="total-text">Total</div>
						<div class="total-price">$<span>{{meal.price}}</span>.00</div>
					</div>
					<div class="form-group order-now-btn">
						<input type="submit" value="Order Now">
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
</section>
<!-- restaurant detail view ends -->